# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Railway/Heroku)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual variables (recommended for local development)
# Comment out DATABASE_URL above if using these:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=avizo
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Encryption Key for storing sensitive credentials in database (32 bytes hex)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_a_random_32_byte_hex_key_here

# Frontend URL (for CORS) - supports comma-separated multiple origins
CLIENT_URL=http://localhost:5173
# For production with multiple origins:
# CLIENT_URL=https://avizo-new-production.up.railway.app,http://localhost:5173

# Application URL (for generating booking links, webhooks, etc.)
APP_URL=http://localhost:5173

# ============================================================================
# INTEGRATION CREDENTIALS - MANAGED THROUGH ADMIN UI
# ============================================================================
# Note: Most businesses will configure these through the Settings page in the
# admin UI. These environment variables are OPTIONAL and only needed if you
# want to set up OAuth apps at the platform level (Google, Microsoft, Zoom).
# Individual business credentials are stored encrypted in the database.
# ============================================================================

# WhatsApp Business API Configuration (per-business, configured in admin UI)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_VERIFY_TOKEN=your_verify_token_for_webhooks

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Calendar Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback

# Microsoft/Outlook Calendar Configuration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/integrations/microsoft/callback

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Zoom Video Integration
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_REDIRECT_URI=http://localhost:3000/api/integrations/zoom/callback

# Google Meet Configuration (uses same Google OAuth as Calendar)
# GOOGLE_MEET_ENABLED=true

# Email Configuration (for email notifications, configured in admin UI)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
